{
  "name": "dissertation",
  "version": "0.0.1",
  "private": true,
  "author": "Daniel Izdebski",
  "scripts": {
    "build": "yarn compile && tsc -p tsconfig.build.json",
    "clean": "rimraf build dist",
    "clean:contracts": "rimraf build",
    "compile": "waffle waffle-solcjs.json && yarn typechain",
    "compile:native": "waffle waffle-native.json && yarn typechain",
    "docs": "java -jar ./docs/plantuml.jar ./docs/*.puml",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:fix": "yarn lint:ts --fix && yarn lint:sol --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint --ext .ts test",
    "prebuild": "yarn clean",
    "precompile": "yarn clean:contracts",
    "precompile:native": "yarn clean:contracts",
    "test": "mocha",
    "typechain": "typechain --target ethers-v5 --outDir build 'build/*.json'",
    "typecheck": "tsc --noEmit",
    "predeploy": "yarn build",
    "deploy": "node dist/src/index.js secrets/example.json"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0-solc-0.7",
    "eth-sig-util": "^3.0.0",
    "ethereumjs-util": "^7.0.7"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/ethereumjs-abi": "^0.6.3",
    "@types/mocha": "^8.0.4",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.22.1",
    "ethereum-waffle": "^3.2.1",
    "ethereumjs-abi": "^0.6.8",
    "ethers": "^5.0.23",
    "mocha": "^8.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.2",
    "solc": "0.7.3",
    "solhint": "^3.3.2",
    "ts-node": "^9.1.0",
    "typechain": "^4.0.1",
    "typescript": "^4.1.2"
  }
}
